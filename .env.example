# ===============================================
# CONFIGURACIÓN DE PRODUCCIÓN - RNDC DASHBOARD
# ===============================================

# -----------------
# SERVIDOR
# -----------------
NODE_ENV=production
PORT=3000

# -----------------
# BASE DE DATOS
# -----------------
MONGODB_URI=mongodb://localhost:27017/cellvi-rndc

# Para MongoDB Atlas (alternativa cloud):
# MONGODB_URI=mongodb+srv://usuario:password@cluster.mongodb.net/cellvi-rndc?retryWrites=true&w=majority

# -----------------
# API CELLVI
# -----------------
CELLVI_API_URL=https://cellviapi.asegurar.com.co
CELLVI_USERNAME=tu_usuario_cellvi
CELLVI_PASSWORD=tu_password_cellvi

# Usuario Admin de Cellvi (para workers)
CELLVI_ADMIN_USERNAME=admin_usuario
CELLVI_ADMIN_PASSWORD=admin_password

# -----------------
# AUTENTICACIÓN
# -----------------
# Secret para firmar tokens JWT (CAMBIAR EN PRODUCCIÓN)
# Generar con: openssl rand -base64 32
JWT_SECRET=CHANGE_THIS_IN_PRODUCTION_USE_OPENSSL_RAND_BASE64_32

# Duración de sesión en minutos
SESSION_DURATION_MINUTES=30

# -----------------
# API RNDC (SOAP)
# -----------------
SOAP_ENDPOINT_URL=http://rndcws.mintransporte.gov.co:8080/soap/IBPMServices
SOAP_REQUEST_TIMEOUT=60000

# -----------------
# GEOCERCAS
# -----------------
GEOFENCE_CHECK_INTERVAL=60000
GEOFENCE_DEFAULT_RADIUS=300

# -----------------
# LOGGING
# -----------------
LOG_LEVEL=warn
LOG_FILE=logs/combined.log

# Niveles disponibles: error, warn, info, http, verbose, debug, silly
# Producción recomendado: warn
# Desarrollo recomendado: debug
